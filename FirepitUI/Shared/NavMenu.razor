<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Firepit</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"profile/{Id}")">
                        <span class="oi oi-person" aria-hidden="true"></span> @context.User.Identity.Name
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="beverages" style="padding-left:12px;">
                        <iconify-icon data-icon="mdi:glass-mug" style="font-size:1.5em;margin-right:0.6em;"></iconify-icon> 
                        Beverages
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="meetings">
                        <span class="oi oi-fire" aria-hidden="true"></span> Firepit
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="quotes">
                        <span class="oi oi-book" aria-hidden="true"></span> QuoteBook
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="chat">
                        <span class="iconify" data-icon="bi:chat-dots" style="font-size:1.5em;margin-right:0.5em;"></span> Chat
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-arrow-circle-left" aria-hidden="true"></span> Log Out
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    [CascadingParameter] string Id { get; set; }
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
